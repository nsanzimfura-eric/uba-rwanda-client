{
  "extends": "@react-native/typescript-config/tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@views/*": ["src/views/*"],
      "@ui/*": ["src/ui/*"],
      "@api/*": ["src/api/*"],
      "tests": ["tests/*"],
      "assets": ["assets/*"],
      "src/*": ["src/*"]
    }
  }
}
